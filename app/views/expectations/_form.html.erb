<%= form_for([track,task,expectation]) do |f| %>
	<div class="row">
		<div class="col-md-3">
			<div class="form-group">
				<%= f.label :name %><br />
	    		<%= f.text_field :name, autofocus: true, class: 'form-control' %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				<%= f.label :var_type %><br />
	    		<%= f.text_field :var_type, class: 'form-control' %>
			</div>
		</div>
		<div class="col-md-1">
			<div class="form-group">
				<%= f.label :operator %><br />
	    		<%= f.text_field :operator, class: 'form-control' %>
			</div>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				<%= f.label :value %><br />
	    		<%= f.text_field :value, class: 'form-control' %>
			</div>
		</div>
		<div class="col-md-1">
			<div class="form-group">
				<label> </label>
				<button alt="Editar" type="submit" class="form-control btn btn-success"><i class="fa fa-check"></i></button>
			</div>
		</div>
		<div class="col-md-1">
			<div class="form-group">
				<label> </label>
				<!-- link to delete -->
				<button alt="Excluir" type="submit" class="form-control btn btn-danger"><i class="fa fa-times"></i></button>
			</div>
		</div>
	</div>
<% end %>
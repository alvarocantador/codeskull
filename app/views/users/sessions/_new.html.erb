<h4><%= t('already_registered') %></h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form"} ) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('email'), required: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t('password'), required: true  %>
  </div>


  <div class="form-group">
    <button type="submit" class="form-control btn btn-default"><%= t('login') %></button>
  </div>
  <div class="form-group">
    <a class="form-control btn btn-default"><i class="fa fa-fw fa-facebook"></i><%= t('login_with', social_netowork: 'Facebook') %></a>
  </div>
  <div class="form-group">
    <%= render 'layouts/messages' %>
  </div>
<% end %>



<h2>ULTIMOS CURSOS</h2>
<hr/>
<% tracks&.each do |track| %>
	<div class="col-md-3">
		<div style="height: 180px; overflow: hidden;">
			<% if !track.contents.first.nil? %>
				<img src="<%= track.contents.first.file.url %>" style="height:100%;" />
			<% else %> 
				<img src="/track_thumb.png" style="width: 100%;" />
			<% end %>
		</div>
		<a href="<%= track_url(track) %>"><h5><%= track.title %></h5></a>
	</div>
<% end %>